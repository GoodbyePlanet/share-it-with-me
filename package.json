{
    "name": "share-it-with-me",
    "version": "1.0.0",
    "description": "Knowledge sharing application",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/GoodbyePlanet/share-it-with-me.git"
    },
    "keywords": [
        "nodejs",
        "graphql",
        "prisma",
        "postgresql"
    ],
    "author": "Nemanja Vasic",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/GoodbyePlanet/share-it-with-me/issues"
    },
    "homepage": "https://github.com/GoodbyePlanet/share-it-with-me#readme",
    "scripts": {
        "build": "rm -rf dist && tsc",
        "start": "dotenv -- nodemon -e ts,graphql -x ts-node src/index.ts",
        "test": "NODE_ENV=test dotenv jest"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "setupFilesAfterEnv": [
            "./tests/setup.ts"
        ]
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.2",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/node": "^14.14.19",
        "@types/pg": "^7.14.11",
        "@types/ws": "^7.4.0",
        "apollo-server": "^2.22.1",
        "dotenv-cli": "^4.0.0",
        "get-port": "^5.1.1",
        "graphql-request": "^3.4.0",
        "jest": "^26.6.3",
        "nanoid": "^3.1.22",
        "nodemon": "^2.0.6",
        "pg": "^8.5.1",
        "prisma": "^2.18.0",
        "ts-jest": "^26.5.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "dependencies": {
        "@prisma/client": "^2.18.0",
        "apollo-errors": "^1.9.0",
        "apollo-server-core": "^1.4.0",
        "bcryptjs": "^2.4.3",
        "dotenv": "^8.2.0",
        "graphql": "^14.5.7",
        "graphql-shield": "^7.5.0",
        "graphql-yoga": "^1.18.3",
        "jsonwebtoken": "^8.5.1"
    }
}
