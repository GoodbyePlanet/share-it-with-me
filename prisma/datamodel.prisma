type User {
    id: ID! @id
    createdAt: DateTime! @createdAt
    email: String! @unique
    username: String!
    role: Role! @default(value: USER)
    posts: [Post!] @relation(name: "UserPosts")
}

type Post {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    title: String!
    content: String!
    author: User! @relation(name: "UserPosts")
    tags: [String!] @scalarList(strategy: RELATION)
}

enum Role {
    ADMIN
    USER
}